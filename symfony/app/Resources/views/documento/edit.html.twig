{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/maithcommonadmin/js/ckeditor/ckeditor.js') }}"></script>
{{ include('MaithCommonAdminBundle:Wyswyg:_addJsInitializerTextAreas.html.twig') }}
<script type="text/javascript" src="{{ asset('bundles/maithcommonadmin/js/jquery.colorbox-min.js') }}"></script>    
<script type="text/javascript" src="{{ asset('bundles/maithcommonimage/js/imagesManager.js') }}"></script> 
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonimage/css/maithalbums.css') }}" />
  <link rel="stylesheet" type="text/css" href="{{ asset('bundles/maithcommonadmin/css/colorbox.css') }}" />
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <section class="panel panel-color">
        <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i>Crear Documento</header>
        <div class="panel-body">
            {{ form_start(edit_form, {'attr' : { 'role' : 'form'} }) }}    
            <div class="form-group">
                {{ form_errors(edit_form.title) }}
                <label for="{{ edit_form.title.vars.id }}">Titulo</label>
                {{ form_widget(edit_form.title, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.body) }}
                <label for="{{ edit_form.body.vars.id }}">Cuerpo</label>
                {{ form_widget(edit_form.body, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.orden) }}
                <label for="{{ edit_form.orden.vars.id }}">Orden</label>
                {{ form_widget(edit_form.orden, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            {{ form_rest(edit_form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-default"><i class="fa fa-save"></i>Guardar</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
        </section>
    </div>
</div>
<div class="row">
  {{ render(controller('MaithCommonAdminBundle:Albums:albumsData', {'id': edit_form.vars.value.id, 'objectclass' : edit_form.vars.value.fullClassName }))}}
<hr/>
</div>
<div class="row">
    <div class="col-lg-8">
        <a href="{{ path('admin_documentos_index') }}" class="btn btn-success" style="float: left; margin: 0!important;">
            <i class="fa fa-arrow-left"></i>Volver al listado
        </a>
            <div class="pull-right">  
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-warning" value="Borrar Documento">
            {{ form_end(delete_form) }}
            </div>
    </div>
</div>
{% endblock %}
