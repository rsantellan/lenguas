{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block javascripts %}
<script src="{{ asset('bundles/maithcommonadmin/js/ckeditor/ckeditor.js') }}"></script>
{{ include('MaithCommonAdminBundle:Wyswyg:_addJsInitializerTextAreas.html.twig') }}
{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-12">
        <section class="panel panel-color">
        <header class="panel-heading text-uppercase"><i class="fa fa-pencil-square-o"></i>Editar Categoria</header>
        <div class="panel-body">
            {{ form_start(edit_form, {'attr' : { 'role' : 'form'} }) }}    
            <div class="form-group">
                {{ form_errors(edit_form.name) }}
                <label for="{{ edit_form.name.vars.id }}">Nombre</label>
                {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.description) }}
                <label for="{{ edit_form.description.vars.id }}">Descripci√≥n</label>
                {{ form_widget(edit_form.description, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.type) }}
                <label for="{{ edit_form.type.vars.id }}">Tipo</label>
                {{ form_widget(edit_form.type, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_errors(edit_form.orden) }}
                <label for="{{ edit_form.orden.vars.id }}">Orden</label>
                {{ form_widget(edit_form.orden, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            {{ form_rest(edit_form) }}
            <div class="form-group">
                <button type="submit" class="btn btn-default"><i class="fa fa-save"></i>Guardar</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <a href="{{ path('admin_category_index') }}" class="btn btn-success" style="float: left; margin: 0!important;">
            <i class="fa fa-arrow-left"></i>Volver al listado
        </a>
            <div class="pull-right">  
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-warning" value="Borrar Categoria" />
            {{ form_end(delete_form) }}
            </div>
    </div>
</div>
{% endblock %}
