{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
	<div class="form-group">
        {{ form_errors(form.current_password) }}
        <label for="{{ form.current_password.vars.id }}">Contraseña actual</label>
        {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control'}}) }}
    </div>
	<div class="form-group">
        {{ form_errors(form.plainPassword.first) }}
        <label for="{{ form.plainPassword.first.vars.id }}">Nueva contraseña</label>
        {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control'}}) }}
    </div>	
    <div class="form-group">
        {{ form_errors(form.plainPassword.second) }}
        <label for="{{ form.plainPassword.second.vars.id }}">Repita la contraseña</label>
        {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'}}) }}
    </div>
    {{ form_widget(form) }}

    <div>
        <input class="btn btn-info btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
