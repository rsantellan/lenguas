{% trans_default_domain 'FOSUserBundle' %}
<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
  <section class="panel panel-default">
	<header class="panel-heading">Olvido de contraseña</header>
	<div class="bg-white user pd-md">
	  <h6>
		<strong>¿Has olvidado tu contraseña?.</strong>Ingresa tu mail para poder mandartela de nuevo!</h6>
	  {% if invalid_username is defined %}
		  <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
	  {% endif %}
	  <form action="{{ path("fos_user_resetting_send_email") }}" method="post" accept-charset="utf-8" role="form">
		<input name="username" required="required" value="" type="text" class="form-control mg-b-sm" placeholder="Correo Electronico" autofocus>

		<button class="btn btn-info btn-block" type="submit" name="_submit">Enviar email</button>
	  </form>
	</div>
  </section>
</div>